source 'https://rubygems.org'

# DAO Client
gem 'rake'
gem 'rb-readline', :require => "readline"

# Rest Client
gem 'rest-client'
gem 'json'

# Web server
gem 'sinatra'
gem 'sinatra-contrib'
gem 'puma'

# Data managemeent
gem 'mongoid', "~> 3.1.5"
gem 'mongoid-paperclip', :require => "mongoid_paperclip"

# Sparql
gem 'sparql-client'

# Serialization
gem 'rabl'

# Web output - AJAX Interface
gem 'sinatra-assetpack', :require => 'sinatra/assetpack'
gem 'coffee-script'
gem 'sass'
gem 'haml'

# Development tools
gem 'shotgun'
gem 'pry'
